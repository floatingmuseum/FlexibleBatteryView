<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="FlexibleBatteryView">
        <attr name="direction">
            <enum name="up" value="0" />
            <enum name="left" value="1" />
            <enum name="right" value="2" />
        </attr>

        <attr name="border_color" format="color" />
        <attr name="inside_power_color" format="color" />
        <attr name="inside_background_color" format="color" />

        <attr name="border_width" format="dimension" />
        <attr name="border_corner_radius" format="dimension" />
        <attr name="inside_padding" format="dimension" />
        <attr name="inside_core_radius" format="dimension" />
        <attr name="head_height" format="dimension" />
        <attr name="head_width" format="dimension" />

        <attr name="power_level" format="integer" />

        <attr name="core_image" format="reference" />
        <attr name="core_image_scale_type">
            <enum name="fitCenter" value="0" />
            <enum name="fitXY" value="1" />
        </attr>

        <attr name="text" format="string"/>
        <attr name="text_size" format="dimension"/>
        <attr name="text_color" format="color" />
    </declare-styleable>
</resources>